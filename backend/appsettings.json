{
  // Veritabanı bağlantı string'leri
  "ConnectionStrings": {
    // SQL Server LocalDB bağlantı string'i
    // Trusted_Connection=true: Windows Authentication kullan
    // TrustServerCertificate=true: SSL sertifika uyarılarını yok say
    // MultipleActiveResultSets=true: Aynı bağlantıda birden fazla sorgu çalıştırabilir
    "DefaultConnection": "Server=localhost;Database=JwtAuthDB;Trusted_Connection=true;TrustServerCertificate=true;MultipleActiveResultSets=true"
  },
  
  // JWT Token yapılandırması
  "Jwt": {
    // Token imzalamak için kullanılan secret key (production'da daha güvenli olmalı)
    "Key": "MySecretKeyForJWTTokenGenerationThatIsLongEnough123456789",
    // Token'ı kim yayınladı (issuer)
    "Issuer": "JwtAuthAPI",
    // Token kimler için geçerli (audience)
    "Audience": "JwtAuthAPI",
    // Token geçerlilik süresi (dakika)
    "ExpirationMinutes": 60
  },
  
  // ASP.NET Core logging yapılandırması
  "Logging": {
    "LogLevel": {
      "Default": "Information",                    // Genel log seviyesi
      "Microsoft": "Warning",                     // Microsoft kütüphaneleri için uyarı seviyesi
      "Microsoft.Hosting.Lifetime": "Information" // Hosting lifecycle için bilgi seviyesi
    }
  },
  
  // CORS için izin verilen host'lar (* = tümü)
  "AllowedHosts": "*"
}